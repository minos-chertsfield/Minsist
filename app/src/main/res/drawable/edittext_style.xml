<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    android:shape="rectangle">
    <!--设置内边距-->
    <padding
        android:bottom="5dp"
        android:left="8dp"
        android:right="8dp"
        android:top="5dp" />
    <!-- 设置圆角矩形 -->
    <corners android:radius="8dp" />
    <!--设置边框的宽度和颜色-->
    <stroke
        android:width="7px"
        android:color="#00CCFF" />
    <!--设置内部填充颜色-->
    <solid android:color="#22CCCCCC" />
</shape>